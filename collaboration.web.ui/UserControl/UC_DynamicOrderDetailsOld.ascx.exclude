                                <label for="inputEmail1" class="col-lg-2 col-sm-2 control-label">
                                    CADS Uploaded
                                </label>
                                <div class="col-lg-8">
                                    <asp:GridView ID="gvTable" runat="server" AutoGenerateColumns="False" AllowSorting="True"
