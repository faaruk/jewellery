                                                    <asp:Image ID="imgCAD" Height="50" Width="50" runat="server" ImageUrl='<%# Eval("CADLocationURL") %>' />
                                                </ItemTemplate>
                                            </asp:TemplateField>
                                            <asp:TemplateField HeaderText="IsApproved" HeaderStyle-ForeColor="#797979">
